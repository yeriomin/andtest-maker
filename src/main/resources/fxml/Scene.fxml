<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="CENTER" maxHeight="180.0" maxWidth="400.0" minHeight="180.0" minWidth="400.0" prefHeight="180.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.yeriomin.andtest.maker.FXMLController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="Parse this file:" />
      <TextField fx:id="textSource" text="test.txt" GridPane.rowIndex="1" />
      <Button fx:id="buttonSource" mnemonicParsing="false" onAction="#handleButtonSource" text="Browse..." GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
      <Label text="Put questions into this file:" GridPane.rowIndex="2" />
      <TextField fx:id="textTarget" text="test.json" GridPane.rowIndex="3" />
      <Button fx:id="buttonTarget" mnemonicParsing="false" onAction="#handleButtonTarget" text="Browse..." GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
      <CheckBox fx:id="checkboxAppend" mnemonicParsing="false" selected="true" text="Append if target file exists" GridPane.rowIndex="4" />
      <Button fx:id="buttonGo" mnemonicParsing="false" onAction="#handleButtonGo" text="Go" GridPane.rowIndex="5" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
